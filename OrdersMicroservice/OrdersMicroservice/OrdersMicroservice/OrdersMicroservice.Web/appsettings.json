{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "mongo": "mongodb://localhost:27017"
  },
  "Orders": {
    "Collection": "OrdersCollection",
    "Database": "OrdersDb"
  },
  "Asks": {
    "Collection": "AskMarket",
    "Database": "OrdersDb"
  },
  "Bids": {
    "Collection": "BidMarket",
    "Database": "OrdersDb"
  },
  "Kafka": {
    "IsEnable": true,
    "OrdersCreatedProducer": {
      "Topic": "Orders_Created",
      "KafkaHost": "localhost:9092",
      "AcksSetting" : "All"
    },
    "OrdersExecutedProducer": {
      "Topic": "Order_Executed",
      "KafkaHost": "localhost:9092",
      "AcksSetting" : "All"
    },
    "OrdersCandidatesProducer": {
      "Topic": "Orders_Candidates",
      "KafkaHost": "localhost:9092",
      "AcksSetting" : "All"
    },
    "OrdersValidationConsumer": {
      "Topic": "Orders_Validation",
      "KafkaHost": "localhost:9092",
      "Group": "Orders"
    },
    "TransactionsConsumer" : {
      "Topic" : "Transactions",
      "KafkaHost" : "localhost:9092",
      "Group" : "Orders"
    }
  }
}
