#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 35000
EXPOSE 35001
ENV ASPNETCORE_URLS="http://*:35000;https://*:35001"

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["PortfolioMicroService.Web/PortfolioMicroService.Web.csproj", "PortfolioMicroservice/PortfolioMicroService.Web/"]
COPY ["PortfolioMicroService.Infrastructure/PortfolioMicroService.Infrastructure.csproj", "PortfolioMicroservice/PortfolioMicroService.Infrastructure/"]
COPY ["PortfolioMicroService.Domain/PortfolioMicroService.Domain.csproj", "PortfolioMicroservice/PortfolioMicroService.Domain/"]
RUN dotnet restore "PortfolioMicroservice/PortfolioMicroService.Web/PortfolioMicroService.Web.csproj"
COPY . .
WORKDIR "/src/PortfolioMicroservice/PortfolioMicroService.Web"
RUN dotnet build "PortfolioMicroService.Web.csproj" -c Release -o /app/build

RUN dotnet dev-certs https --trust

FROM build AS publish
RUN dotnet publish "PortfolioMicroService.Web.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "PortfolioMicroService.Web.dll"]
